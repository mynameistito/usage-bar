{
  "name": "usage-bar-windows",
  "version": "1.0.0",
  "description": "Usage Bar for Windows - System tray application for monitoring Claude and Z.ai API usage",
  "type": "module",
  "scripts": {
    "cargo:check": "cd src-tauri && cargo check",
    "cargo:build": "cd src-tauri && cargo build",
    "cargo:build:release": "cd src-tauri && cargo build --release",
    "cargo:clippy": "cd src-tauri && cargo clippy",
    "cargo:test": "cd src-tauri && cargo test",
    "cargo:clean": "cd src-tauri && cargo clean",
    "cargo:fmt": "cd src-tauri && cargo fmt",
    "cargo:tree": "cd src-tauri && cargo tree",
    "cargo:precheck": "cd src-tauri && cargo check && cargo clippy && cargo fmt --check",
    "tauri": "tauri",
    "dev": "tauri dev",
    "vite:dev": "vite",
    "vite:build": "vite build",
    "typecheck": "tsc --noEmit",
    "build": "bun run generate-icon && tauri build",
    "build:nsis": "bun run generate-icon && tauri build --bundles nsis",
    "build:msi": "bun run generate-icon && tauri build --bundles msi",
    "generate-icon": "node scripts/generate-icon.js"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-opener": "^2.5.3"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "png-to-ico": "^3.0.1",
    "serve": "^14.2.5",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "author": "",
  "license": "ISC"
}
